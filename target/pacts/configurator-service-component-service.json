{
  "provider": {
    "name": "component-service"
  },
  "consumer": {
    "name": "configurator-service"
  },
  "interactions": [
    {
      "description": "a request to get all am4 compatible coolers",
      "request": {
        "method": "GET",
        "path": "/api/v1/cpucoolers",
        "query": {
          "socket": [
            "am4"
          ]
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json;charset\u003dUTF-8"
        },
        "body": [
          {
            "id": "12345",
            "model": "MasterAir Pro 4",
            "manufacturer": "Cooler Master",
            "supportedCpuSockets": [
              "AM4"
            ],
            "airFlowInCFM": {
              "cfm": "66.7"
            }
          }
        ]
      },
      "providerStates": [
        {
          "name": "coolers in the database"
        }
      ]
    },
    {
      "description": "a request to get all am4 compatible coolers (2)",
      "request": {
        "method": "GET",
        "path": "/api/v1/cpucoolers",
        "query": {
          "socket": [
            "am4"
          ]
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json;charset\u003dUTF-8"
        },
        "body": [
          {
            "supportedCpuSockets": [
              "AM4"
            ],
            "model": "MasterAir Pro 4",
            "id": "12345",
            "manufacturer": "Cooler Master",
            "airFlowInCFM": {
              "cfm": "66.7"
            }
          }
        ],
        "matchingRules": {
          "body": {
            "$": {
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ],
              "combine": "AND"
            },
            "$[*].id": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$[*].model": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$[*].manufacturer": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$[*].supportedCpuSockets[0]": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            },
            "$[*].airFlowInCFM.cfm": {
              "matchers": [
                {
                  "match": "type"
                }
              ],
              "combine": "AND"
            }
          },
          "header": {
            "Content-Type": {
              "matchers": [
                {
                  "match": "regex",
                  "regex": "application/json(;\\s?charset\u003d[\\w\\-]+)?"
                }
              ],
              "combine": "AND"
            }
          }
        }
      },
      "providerStates": [
        {
          "name": "coolers in the database"
        }
      ]
    },
    {
      "description": "a request to get all am4 compatible coolers",
      "request": {
        "method": "GET",
        "path": "/api/v1/cpucoolers",
        "query": {
          "socket": [
            "am4"
          ]
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json;charset\u003dUTF-8"
        },
        "body": []
      },
      "providerStates": [
        {
          "name": "no coolers in the database"
        }
      ]
    }
  ],
  "metadata": {
    "pactSpecification": {
      "version": "3.0.0"
    },
    "pact-jvm": {
      "version": "3.6.5"
    }
  }
}